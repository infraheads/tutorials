podTemplate(
  containers: [
    containerTemplate (
      name: "kaniko",
      image: "gcr.io/kaniko-project/executor:debug",
      alwaysPullImage: true,
      command: "sleep",
      args: "99999"
    )],
  volumes: [
    secretVolume( 
      mountPath: '/kaniko/.docker', 
      secretName: 'docker-config'
    )
  ]
)
{
  node (POD_LABEL) {
    stage("Get the Terraform app and build") {
      git url: "https://github.com/hashicorp/terraform.git", branch: "main"
        container("kaniko") {
          stage("Build a Terraform project") {
            sh '''
              /kaniko/executor --context `pwd` --destination repo/app
            '''
                }
            }
        }
    }
}
